" see http://vimdoc.sourceforge.net/htmldoc/options.html for full documentation

syntax enable           " enable syntax processing

colorscheme molokai

set tabstop=4           " number of visual spaces per TAB
set softtabstop=4       " number of spaces in tab when editing
set expandtab           " tabs are spaces
"set number             " show line numbers - copied it also if copy multiline
set showcmd             " show command in bottom bar
"set cursorline          " highlight current line
set wildmenu            " visual autocomplete for command menu
set showmatch           " highlight matching [{()}]
set shiftwidth=4        " number of spaces of indent
set history=1000         " history of search patterns
set encoding=utf-8      " sets character encoding in vim
set hlsearch            " highlight the search results
set backspace=2         " allows to use backspace-key

