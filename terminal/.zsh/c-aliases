# ALIASES

## System
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'
alias cx='chmod u+x'

## clear history
alias hclear="rm $HISTFILE"

## Git
## for more take a look to https://github.com/robbyrussell/oh-my-zsh/wiki/Cheatsheet
alias gst='git status'
alias ga='git add'
alias gc='git commit'
alias gco='git checkout'
alias gac='git commit -a'
alias gp='git push'
alias gpo='git push origin'
alias gl='git pull'
alias glo='git pull origin'
alias gm='git merge --no-ff'
alias gr='git reset'
alias grh='git reset --hard'
alias gre='git remote'
alias grm="git rm"
alias gcl="git clone"
alias gd="git diff"
alias gds="git diff --staged"
alias gb='git branch'
alias gbd='git branch -d'
alias gf='git fetch'
alias gfo='git fetch origin'
alias gfp='git fetch --prune --prune-tags'

## Composer
alias c='XDEBUG_MODE=off composer'
alias composer='XDEBUG_MODE=off composer'

## Custom paths
alias cdnginx='cd /usr/local/etc/nginx/'

## Custom commands
alias openvsc='open -a "Visual Studio Code" $1' # open given file with Visual Studio Code
alias zshreload='source ~/.zshrc' # reload ZSH
alias grep='grep --color=auto' # colorize `grep` output
